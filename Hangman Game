import random

word_list = [
    "python", "elephant", "hangman", "astronomy", "butterfly",
    "mountain", "jungle", "galaxy", "sunflower", "ocean",
    "sandwich", "rainbow", "universe", "telescope", "volcano",
    "horizon", "treasure", "island", "zeppelin", "kangaroo",
    "avalanche", "parachute", "constellation", "dolphin", "chocolate",
    "glacier", "tornado", "marathon", "labyrinth", "puzzle",
    "champion", "mystery", "diamond", "sapphire", "octopus",
    "phantom", "balloon", "elephant", "adventure", "dragonfly",
    "fireworks", "carousel", "lighthouse", "waterfall", "meteorite"
]

# TODO-1 - Randomly choose a word from the word_list and assign it to a variable called chosen_word. Then print it.

# TODO-2 - Ask the user to guess a letter and assign their answer to a variable called guess. Make guess lowercase.

# TODO-3 - Check if the letter the user guessed (guess) is one of the letters in the chosen_word. Print "Right" if it
#  is, "Wrong" if it's not.


chances = 6
chosen_word = random.choice(word_list)

blank_word = ""
for i in range(len(chosen_word)):
    blank_word += '_'

while blank_word != chosen_word:

    if chances == 0:
        print("You lose!")
        break

    print(f"number of chances left: {chances}")
    print(blank_word)
    check_letter = input("Guess a letter: ")
    check_letter = check_letter.lower()
    if check_letter in chosen_word:
        print("right!")
        for x in range(len(chosen_word)):
            if chosen_word[x] == check_letter:
                bl = list(blank_word)
                bl[x] = check_letter
                blank_word = ''.join(bl)


    else:
        chances -= 1
        print("wrong!")

print("You win!")
